<div class="container">
  <nav class="navbar navbar-inverse container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#"><%= username %></a>
    </div>
    <div class="navbar-right">
      <a class="navbar-brand" href="/auth/logout">logout</a>
    </div>
  </nav>
  <div class="panel panel-default">
  <div class="panel-heading">Create a Game</div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <input type="text" class="form-control" placeholder="Game Name" id="name" aria-describedby="basic-addon1"> 
        </div>
      </div><br />
      <div class="row">    
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <input type="text" class="form-control allowed-user" placeholder="Allowed user-1" aria-describedby="basic-addon1"> 
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <input type="text" class="form-control allowed-user" placeholder="Allowed user-2" aria-describedby="basic-addon1"> 
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <input type="text" class="form-control allowed-user" placeholder="Allowed user-3" aria-describedby="basic-addon1"> 
        </div>
      </div>
      <br />
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-md-offset-6">
          <button type="button" class="btn btn-primary" id="createGame" data-loading-text="Creating..." autocomplete="off">Create</button>
        </div>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
  
  <div class="panel-heading">Online Games</div>
    <div class="list-group" id="onlinegames">
      <% for(var i=0; i< games.length; i++){
        if(games[i].users.length>0){
       %>
      <a href="#" id="<%= games[i].id %>" class="list-group-item join-game"><span class="badge"><%= games[i].users.length %></span><%= games[i].name %></a>
      <%
      } 
    } %>
    </div>
</div>
</div>